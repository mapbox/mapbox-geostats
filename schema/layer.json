{
  "id": "/layer",
  "type": "object",
  "properties": {
    "layer": { "type": "string" },
    "count": { "type": "number" },
    "geometry": {
      "anyOf": [
        { "$ref": "/geometry" },
        { "type": "array", "items": { "$ref": "/geometry" } }
      ]
    },
    "attributeCount": { "type": "number" },
    "attributes": {
      "type": "array",
      "items": { "$ref": "/attribute" }
    }
  },
  "required": [ "layer", "count", "geometry", "attributeCount" ]
}
