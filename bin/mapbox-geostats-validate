#!/usr/bin/env node
'use strict';

/* eslint-disable no-console */
const meow = require('meow');
const fs = require('fs');
const validate = require('../lib/validate-stats');

const help = `
  Usage
    mapbox-geostats-validate <file>

    Output is empty if valid, or a list of errors.

  Example
    mapbox-geostats-validate ./path/to/stats.json
  `;

const cli = meow(help);
const file = cli.input[0];

if (!file) cli.showHelp();

let stats;
try {
  const raw = fs.readFileSync(file);
  console.log(raw);
  stats = JSON.parse(raw);
} catch (err) {
  console.log('Unable to read JSON file');
  console.error(err);
  console.log(help);
  return;
}

const results = validate(stats);
if (results.length) {
  console.log('✘ Invalid');
  results.forEach(function(s) {
    console.log(`- ${s}`);
  });
} else {
  console.log('✔ Valid');
}
